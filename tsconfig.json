{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "paths": {
          "*": [
              "node_modules/*",
              "types/*"
          ]
      }
  },
  "include": [
      "js/**/*"
  ]
}
