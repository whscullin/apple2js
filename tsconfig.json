{
  "compilerOptions": {
      "module": "esnext",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es6",
      "lib": ["DOM", "ES6"],
      "noImplicitAny": true,
      "noImplicitThis": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "strictNullChecks": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "paths": {
          "*": [
              "node_modules/*",
              "types/*"
          ],
          "js/*": [
              "js/*"
          ],
          "test/*": [
            "test/*"
          ]
      }
  },
  "include": [
      "js/**/*",
      "test/**/*",
      "*.config.js"
  ]
}
